<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2>Forgot your password?</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-lg',placeholder: "New Password" %>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Send me reset password instructions</button>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>