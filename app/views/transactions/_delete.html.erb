<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button> 
    <h4 class="modal-title text-center">Delete Transaction</h4>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @transaction.name %></b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes, Delete This Transaction", transaction_path(@transaction), method: :delete, remote: true, class: "btn btn-danger" ,:id => "delete" %>
    <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>